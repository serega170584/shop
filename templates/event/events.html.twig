{% block events %}
    <section class="events-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="title-section">
                        <div class="left-part">
                            <h1>События</h1>
                        </div>
                    </div>

                    <div class="events-box">
                        {% set events = mainPageManager.getEventManager().getItems() %}
                        {% for event in events %}
                            <div class="events-post">
                                <div class="event-inner-content">
                                    <div class="top-part">
                                        <div class="date-holder">
                                            <div class="date">
                                                <span class="date-day">{{ event.getStartsAt()|date("d") }}</span>
                                                <span class="date-month">{{ event.getStartsAt()|date("M") }}</span>
                                            </div>
                                        </div>
                                        <div class="content">
                                            <div class="event-meta">
												<span class="event-meta-piece start-time">
													<i class="material-icons">access_time</i> {{ event.getStartsAt()|date("H:i") }} - {{ event.getFinishedAt()|date("H:i") }}
												</span>
                                            </div>
                                            <h2 class="title"><a
                                                        href="{{ path('event', { slug: event.getSlug() }) }}">{{ event.getTitle() }}</a>
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="title-section">
                        <div class="left-part">
                            <h1>Видео</h1>
                        </div>
                    </div>

                    <div class="video-box">
                        {% set firstVideo = mainPageManager.getVideoManager().getFirstItem() %}
                        {% if (firstVideo) %}
                            <div class="video-post">
                                <img src="{{ ['/uploads/video/', firstVideo.getImage()]|join('') }}" alt="">
                                <div class="hover-post">
                                    <h2>{{ firstVideo.getTitle() }}</h2>
                                    {{ firstVideo.getPreview()|raw }}
                                </div>
                                <a class="video-link iframe" href="https://vimeo.com/97447862"><span><i
                                                class="fa fa-play"></i></span></a>
                            </div>
                        {% endif %}

                        <div class="row">
                            {% set videos = mainPageManager.getVideoManager().getItems() %}
                            {% for video in videos %}
                                <div class="col-md-6">
                                    <div class="video-post small-post">
                                        <img src="{{ ['/uploads/video/', video.getImage()]|join('') }}" alt="">
                                        <div class="hover-post">
                                            <h2>{{ video.getTitle() }}</h2>
                                        </div>
                                        <a class="video-link iframe" href="https://vimeo.com/97447862"><span><i
                                                        class="fa fa-play"></i></span></a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}