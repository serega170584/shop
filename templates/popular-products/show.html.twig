{% extends 'frontend/page.html.twig' %}
{% block breadcrumbs %}
    <ul class="page-depth">
        <li><a href="{{ path('index') }}">Главная</a></li>
        <li><a href="{{ path('popular-products') }}">Популярные курсы</a></li>
    </ul>
{% endblock %}
{% block page_content %}
    <div class="courses-top-bar">
        <div class="courses-view">
            <a href="{{ path('popular-products') }}" class="grid-btn active">
                <i class="fa fa-th-large" aria-hidden="true"></i>
            </a>
            <a href="{{ path('popular-products-list') }}" class="grid-btn">
                <i class="fa fa-bars" aria-hidden="true"></i>
            </a>
            <span>Найдено {{ products|length }} курса</span>
        </div>
        <form class="search-course">
            <input type="search" name="search" id="search_course" placeholder="Search Courses..."/>
            <button type="submit">
                <i class="material-icons">search</i>
            </button>
        </form>
    </div>

    <div class="row">
        {% for product in products %}
            {{ block("item", "product/item.html.twig") }}
        {% endfor %}
    </div>
{% endblock %}