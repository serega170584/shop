{% extends 'frontend/layout.html.twig' %}

{% block breadcrumbs_content %}
    <!-- page-banner-section
			================================================== -->
    <section class="page-banner-section">
        <div class="container">
            <h1>{{ title }}</h1>
            {% block breadcrumbs %}{% endblock %}
        </div>
    </section>
    <!-- End page-banner-section -->
{% endblock %}
{% block cart_section_header %}{% endblock %}
{% block template_content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                {% block page_content %}{% endblock %}
            </div>

            <div class="col-lg-4">
                <div class="sidebar">
                    {% block sidebar_content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block cart_section_footer %}{% endblock %}