{% extends 'frontend/order.html.twig' %}
{% block sidebar_content %}
    <div class="widget cart-widget">
        <h2>Заказ</h2>
        <table>
            <tbody>
            <tr>
                <td>Курс</td>
                <td>Стоимость</td>
            </tr>
            {% for item in basketItems %}
                <tr>
                    <td class="name-pro">
                        {{ item.getProduct().getTitle() }}
                    </td>
                    <td>£{{ item.getProduct().getPrice() }}</td>
                </tr>
            {% endfor %}
            <tr class="order-total">
                <th>Всего</th>
                <td class="total-price">{{ cost }}</td>
            </tr>
            </tbody>
        </table>
        <a href="#" class="checkout-button" id="order">Оформить</a>
    </div>
{% endblock %}