{% extends 'frontend/basket.html.twig' %}
{% block title %}Корзина{% endblock %}
{% block breadcrumbs %}
    <ul class="page-depth">
        <li><a href="{{ path('index') }}">Главная</a></li>
        <li><a href="{{ path('basket') }}">Корзина</a></li>
    </ul>
{% endblock %}
{% block page_content %}
    <div class="cart-box" id="basket-update" data-delete-id="{{ productDeleteForm.product.vars.id }}">
        {{ block("items", "basket/items.html.twig") }}
    </div>
    {{ block("productDeleteForm", "product/productDeleteForm.html.twig") }}
{% endblock %}
{% block pageJavascripts %}
    <script src="{{ asset('js/basket.js') }}"></script>
{% endblock %}
