{% extends 'frontend/orderForm.html.twig' %}
{% block title %}Оформить заказ{% endblock %}
{% block breadcrumbs %}
    <ul class="page-depth">
        <li><a href="{{ path('index') }}">Главная</a></li>
        <li><a href="{{ path('checkout') }}">Оформить заказ</a></li>
    </ul>
{% endblock %}
{% block page_content %}
    <div class="cart-box">
        {{ form_start(orderForm, {'action': path('checkout'), 'class': 'billing-details'}) }}
        {{ form_row(orderForm.email) }}
        {{ form_row(orderForm.telephone) }}
        {{ form_row(orderForm.address) }}
        {{ form_end(orderForm) }}
    </div>
{% endblock %}