                    debugMode: false,
                    fallbacks: {
                        simplifyAll: "off",
                        nextSlideOnWindowFocus: "off",
                        disableFocusListener: false,
                    }
                });
            }
        }); /*ready*/
        $(function () {
            $('.button-one').click(function (e) {
                e.preventDefault();
            });
        });
    </script>
{% endblock %}
